{
	"source": {
		"include": ["src", "package.json", "readme.md"],
		"includePattern": ".js$",
		"excludePattern": "(node_modules/|docs)"
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	},
	"opts": {
		"recurse": true,
		"destination": "./docs",
		"template": "./node_modules/clean-jsdoc-theme",
		"tutorials": "/tutorials/",
		"readme": "./README.md",
		"encoding": "utf8",
		"theme_opts": {
			"title": "JSDocExample Documentation"
		},
		"verbose": true
	},
	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
	}
}
